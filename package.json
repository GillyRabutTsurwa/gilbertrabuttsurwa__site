{
    "name": "gilbertrabuttsurwa.com__site",
    "version": "1.4.4",
    "description": "Coming Soon",
    "main": "nuxt.config.ts",
    "private": true,
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev --dotenv .env.local",
        "prod-preview": "nuxt dev",
        "clean": "nuxi cleanup",
        "sanitise": "nuxi cleanup && rm package-lock.json && rm -rf node_modules",
        "postsanitise": "npm install",
        "dev-https": "nuxt dev --https --ssl-cert localhost.pem --ssl-key localhost-key.pem --dotenv .env.local",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "release": "dotenv release-it --",
        "release-minour": "release-it minor"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^4.1.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@nuxt/devtools": "^2.6.2",
        "@nuxtjs/google-fonts": "^3.2.0",
        "@nuxtjs/supabase": "^1.6.0",
        "@release-it/conventional-changelog": "^10.0.1",
        "@sanity/types": "^4.3.0",
        "@storybook/addon-links": "^9.1.1",
        "@storybook/vue3-vite": "^9.1.1",
        "@types/node": "^24.2.1",
        "dotenv-cli": "^10.0.0",
        "nuxt": "4.1.3",
        "release-it": "^19.0.4",
        "sass": "^1.90.0",
        "sass-loader": "^16.0.5",
        "storybook": "^9.1.1",
        "vue-router": "^4.5.1",
        "@storybook/addon-docs": "^9.1.1"
    },
    "dependencies": {
        "@nuxtjs/sanity": "^1.14.1",
        "@pinia/nuxt": "^0.11.2",
        "@sanity/client": "^7.8.2",
        "@sanity/image-url": "^1.1.0",
        "@vueuse/core": "^13.6.0",
        "groq": "^4.3.0",
        "highlight.js": "^11.11.1",
        "leaflet": "^1.9.4",
        "mongoose": "^8.17.1",
        "pinia": "^3.0.3",
        "sanity": "^4.3.0",
        "stripe": "^18.4.0",
        "typescript": "^5.9.2",
        "vue3-carousel": "^0.16.0",
        "vue3-marquee": "^4.2.2"
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release v${version}"
        },
        "github": {
            "release": true
        },
        "npm": {
            "publish": false
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "infile": "CHANGELOG.md",
                "preset": {
                    "name": "conventionalcommits",
                    "types": [
                        {
                            "type": "feat",
                            "section": "Features"
                        },
                        {
                            "type": "fix",
                            "section": "Bug Fixes"
                        }
                    ]
                }
            }
        }
    },
    "overrides": {
        "vue": "latest"
    }
}
